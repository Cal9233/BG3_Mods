<?xml version="1.0" encoding="utf-8"?>
<contentList>
    <!-- ==================== CLASS ==================== -->
    <content contentuid="hFB_Class_DisplayName" version="1">Flashblade</content>
    <content contentuid="hFB_Class_Description" version="1">A swift warrior who marks enemies with enchanted kunai and teleports between them with deadly precision. Masters of hit-and-run tactics, Flashblades use their Kunai Points to weave in and out of combat.</content>

    <!-- ==================== ACTION RESOURCES ==================== -->
    <content contentuid="hFB_KunaiPoint_DisplayName" version="1">Kunai Points</content>
    <content contentuid="hFB_KunaiPoint_Description" version="1">Mystical energy used to fuel your kunai abilities and teleportation techniques.</content>

    <!-- ==================== SUBCLASS: WAY OF THE RICOCHET ==================== -->
    <content contentuid="hFB_Ricochet_DisplayName" version="1">Way of the Ricochet</content>
    <content contentuid="hFB_Ricochet_Description" version="1">Master bouncing kunai that strike multiple enemies in succession, chaining damage across the battlefield.</content>
    <content contentuid="hFB_Ricochet_ShortName" version="1">Ricochet</content>

    <!-- ==================== SUBCLASS: WAY OF THE EXPLOSIVE ==================== -->
    <content contentuid="hFB_Explosive_DisplayName" version="1">Way of the Explosive</content>
    <content contentuid="hFB_Explosive_Description" version="1">Infuse kunai with volatile energy that detonates on command, turning marked targets into walking bombs.</content>
    <content contentuid="hFB_Explosive_ShortName" version="1">Explosive</content>

    <!-- ==================== PASSIVES ==================== -->
    <content contentuid="hFB_FlashStrikePassive_DisplayName" version="1">Flash Strike</content>
    <content contentuid="hFB_FlashStrikePassive_Description" version="1">After teleporting to a marked target, gain Advantage on your next attack.</content>

    <content contentuid="hFB_ChainFlashPassive_DisplayName" version="1">Chain Flash</content>
    <content contentuid="hFB_ChainFlashPassive_Description" version="1">You can teleport to multiple marked targets in a single action.</content>

    <content contentuid="hFB_RicochetBounceBack_DisplayName" version="1">Bounce Back</content>
    <content contentuid="hFB_RicochetBounceBack_Description" version="1">Your ricochet kunai deal an additional 1d6 damage on each bounce.</content>

    <content contentuid="hFB_RicochetMastery_DisplayName" version="1">Ricochet Mastery</content>
    <content contentuid="hFB_RicochetMastery_Description" version="1">Your kunai can bounce to additional targets and ignore cover.</content>

    <content contentuid="hFB_ExplosiveVolatileMark_DisplayName" version="1">Volatile Mark</content>
    <content contentuid="hFB_ExplosiveVolatileMark_Description" version="1">Your explosive kunai leave volatile marks that can be detonated remotely.</content>

    <content contentuid="hFB_ExplosiveChainReaction_DisplayName" version="1">Chain Reaction</content>
    <content contentuid="hFB_ExplosiveChainReaction_Description" version="1">When a volatile mark explodes, it can trigger nearby marks to detonate as well.</content>

    <!-- ==================== SPELLS - PROJECTILES ==================== -->
    <content contentuid="hFB_MarkedKunai_DisplayName" version="1">Marked Kunai</content>
    <content contentuid="hFB_MarkedKunai_Description" version="1">Throw a kunai that marks the target, allowing you to teleport to them. Deals 1d4 piercing damage.</content>

    <content contentuid="hFB_ScatterKunai_DisplayName" version="1">Scatter Kunai</content>
    <content contentuid="hFB_ScatterKunai_Description" version="1">Throw multiple kunai at up to 3 targets, marking each one hit.</content>

    <content contentuid="hFB_RicochetKunai_DisplayName" version="1">Ricochet Kunai</content>
    <content contentuid="hFB_RicochetKunai_Description" version="1">Throw a kunai that bounces between up to 3 enemies, marking and damaging each target hit.</content>

    <content contentuid="hFB_ExplosiveKunai_DisplayName" version="1">Explosive Kunai</content>
    <content contentuid="hFB_ExplosiveKunai_Description" version="1">Throw an explosive kunai that deals fire damage in an area and leaves a volatile mark.</content>

    <content contentuid="hFB_VolatileDetonate_DisplayName" version="1">Volatile Detonate</content>
    <content contentuid="hFB_VolatileDetonate_Description" version="1">Detonate all volatile marks, dealing fire damage to marked targets.</content>

    <!-- ==================== SPELLS - TARGET ==================== -->
    <content contentuid="hFB_FlashStep_DisplayName" version="1">Flash Step</content>
    <content contentuid="hFB_FlashStep_Description" version="1">Instantly teleport to a marked target.</content>

    <content contentuid="hFB_FlashStrike_DisplayName" version="1">Flash Strike</content>
    <content contentuid="hFB_FlashStrike_Description" version="1">Teleport to a marked target and strike them with your melee weapon.</content>

    <content contentuid="hFB_ChainFlash_DisplayName" version="1">Chain Flash</content>
    <content contentuid="hFB_ChainFlash_Description" version="1">Teleport between up to 3 marked targets, striking each one in rapid succession.</content>

    <content contentuid="hFB_GravityWell_DisplayName" version="1">Gravity Well</content>
    <content contentuid="hFB_GravityWell_Description" version="1">Create a gravity field that slows all enemies in the area.</content>

    <content contentuid="hFB_RecoverKunai_DisplayName" version="1">Recover Kunai</content>
    <content contentuid="hFB_RecoverKunai_Description" version="1">Recover 3 Kunai Points. Once per short rest.</content>

    <content contentuid="hFB_Rasengan_DisplayName" version="1">Rasengan</content>
    <content contentuid="hFB_Rasengan_Description" version="1">Teleport to a marked target and strike with devastating force, dealing massive damage and pushing them back.</content>

    <!-- ==================== STATUSES ==================== -->
    <content contentuid="hFB_Mark_DisplayName" version="1">Thunder God Mark</content>
    <content contentuid="hFB_Mark_Description" version="1">Marked by a kunai. The Flashblade can teleport to this target.</content>

    <content contentuid="hFB_VolatileMark_DisplayName" version="1">Volatile Mark</content>
    <content contentuid="hFB_VolatileMark_Description" version="1">Marked with explosive energy. Can be detonated remotely by the Flashblade.</content>

    <content contentuid="hFB_Advantage_DisplayName" version="1">Flash Advantage</content>
    <content contentuid="hFB_Advantage_Description" version="1">Gain Advantage on your next attack after teleporting.</content>

    <content contentuid="hFB_Slowed_DisplayName" version="1">Gravity Slowed</content>
    <content contentuid="hFB_Slowed_Description" version="1">Movement speed reduced by the gravity well.</content>

</contentList>
