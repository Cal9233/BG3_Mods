game.states.GLO_DreadOverlord_FreeSummon = State{
    function()
        description = [[Undead freed by Enigma will wander around independently.]]

        modules = {"shared.util"}

        -- Lock character on the spot
        local wanderAnchor = nil

        self.OnEnter = function()
            if wanderAnchor == nil then
                wanderAnchor = me.Position
            end
        end

        nodes.Action_Wander = Action{
            function()
                mod.util.SleepRandom(5.0, 10.0)

                if wanderAnchor ~= nil then
                    try
                        Wander(5.0, 3.0, MovementSpeed.Walk, wanderAnchor)
                    catch e if ls.CheckType(e, error.MovementFailed) then
                        DebugText(me, "Error: Wander MovementFailed")
                        Sleep(3.0)
                    end
                end

                mod.util.SleepRandom(5.0, 10.0)
            end
        }
    end
}